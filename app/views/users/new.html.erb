<% provide(:title, "New User") %>

<div class="container" id="login_container">
  <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="form-login">
					<h1>New User</h1>
					<%= form_for(:user, url: users_path) do |f| %>
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control input-lg chat-input"%><br>

						<%= f.label :username %>
						<%= f.text_field :username, class: "form-control input-lg chat-input"%><br>

            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control input-lg chat-input"%><br>

						<%= f.submit "Submit", class: "btn btn-primary btn-md" %>
					<% end %>
        </div>
      </div>
    </div>
</div>
